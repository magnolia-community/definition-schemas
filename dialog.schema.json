{
    "$id": "https://raw.githubusercontent.com/magnolia-community/vscode-schemas/master/dialog.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Dialog definition",
    "description": "Dialogs for Magnolia CMS https://documentation.magnolia-cms.com/display/DOCS/Dialog+definition",
    "type": "object",
    "properties": {
      "class": { "type": "string" },
      "actions": { 
        "type": "object",
        "properties": {
          "commit": {
            "type": "object",
            "properties": {
              "class": { 
                "type": "string",
                "default": "info.magnolia.ui.admincentral.dialog.action.SaveDialogActionDefinition"
              },
              "label": { 
                "type": "string",
                "default": "Save"
              }
            },
          },
          "cancel": {
            "type": "object",
            "properties": {
              "class": { 
                "type": "string",
                "default": "info.magnolia.ui.admincentral.dialog.action.CancelDialogActionDefinition"
              },
              "label": { 
                "type": "string",
                "default": "Cancel"
              }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      },
      "actionArea": { "type": "string" },
      "dialogLabelItemProperty": { "type": "string" },
      "form": {
        "type": "object",
        "properties": {
          "tabs": {
            "items": [
              { 
                "name": { "type": "string" },
                "type": "object",
                "properties": {
                  "fields": {
                    "items": [
                      {
                        "type": "object",
                        "properties": {
                          "class": { "type": "string" },
                          "description": { "type": "string" },
                          "fieldType": { "type": "string" },
                          "i18n": { "type": "boolean" },
                          "label": { "type": "string" },
                          "name": { "type": "string" },
                          "placeholder": { "type": "string" },
                          "readOnly": { "type": "string" },
                          "required": { "type": "boolean" },
                          "requiredErrorMessage": { "type": "string" },
                          "styleName": { "type": "string" },
                          "transformerClass": { "type": "string" }
                        },
                        "additionalProperties": true
                      }
                    ]
                  }
                }
              }
            ]
          }
        }
      },
      "modalityLevel": { "type": "string" },
      "wide": { "type": "boolean" }
    },
    "additionalProperties": true
}