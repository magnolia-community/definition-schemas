{
    "$id": "https://raw.githubusercontent.com/magnolia-community/vscode-schemas/master/template.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Template definition",
    "description": "Templating for Magnolia CMS https://documentation.magnolia-cms.com/display/DOCS/Template+definition",

    "definitions": {
      "areas": {
        "type": "object",
        "properties": {
          "additionalProperties": true,
          "areas": { "$ref": "#/definitions/areas" },
          "availableComponents": {
            "type": "object",
            "properties": {
              "class": { "type": "string" }
            }
          },
          "autoGeneration": { 
            "type": "object",
            "properties": {
              "additionalProperties": true,
              "class": { "type": "string" },
              "content": { "type": "object" },
              "generatorClass": { "type": "string" } 
            }
          },
          "class": { "type": "string" },
          "createAreaNode": { "type": "boolean" },  
          "description": { "type": "string" },
          "dialog": { "type": "string" },
          "editable": { "type": "boolean" },
          "fragmentDefinition": {
            "type": "object",
            "properties": {
              "class": { "type": "string" },
              "dynamic": { "type": "boolean"  },
              "mechanism": { "type": "string" },
              "ttl": { "type": "number" }
            }
          },
          "inheritance": {
            "type": "object",
            "properties": {
              "additionalProperties": true,
              "class": { "type": "string" },
              "components": { "type": "string" },
              "enabled": { "type": "boolean" },
              "nodeComparatorClass": { "type": "string" },
              "predicateClass": { "type": "string" },
              "properties": { "type": "string" }
            }
          },
          "maxComponents": { "type": "number" },
          "modelClass": { "type": "string" },
          "parameters": { "type": "object" },
          "optional": { "type": "boolean" },
          "renderType": { "type": "string" },
          "subtype": { "type": "string" },
          "templateScript": {  "type": "string" },
          "type": { "type": "string" }
        }
      }
    },

    "type": "object",
    "properties": {
      "additionalProperties": true,
      "areas": { "$ref": "#/definitions/areas" },
      "class": { "type": "string" },
      "description": { "type": "string" },
      "dialog": { "type": "string" },
      "extends": { "string": "string" },
      "modelClass": { "type": "string" },
      "parameters": { "type": "object" },
      "renderType": { "type": "string" },
      "subtype": { "type": "string" },
      "templateScript": { "type": "string" },
      "title": { "type": "string" },
      "type": { "type": "string" },
      "visible": {  "type": "boolean" }
    }
}